@model IEnumerable<HumerResource.Models.Addresses>

@{
    ViewBag.Title = "Address";
}

<style type="text/css">
    table {
       
        margin-left:auto;
        margin-right:auto;
    }
    th {
      background-color:darkblue;
      color:Window;  
    }
    td {
      background-color:lightcyan;
     
    }
    
    .Title_Div {
        text-align:center;
         font-size:64PX;
         width:inherit;
         font-family:Arial;
         color:Window;
         background-color:lightblue;
    }
</style>
<div class="Title_Div">Address</div>
<div style="text-align:center;">
<h1>
    @Html.ActionLink("Agent List", "Index","Home") | @Html.ActionLink("Address List", "Index","Address")
</h1>
    

<p>
    @Html.ActionLink("New Address", "Create")   |    
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AddressID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Town)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contry)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Postcode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Agents.FirstName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AddressID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Town)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contry)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Postcode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Agents.FirstName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.AddressID }) |
            @Html.ActionLink("Details", "Details", new { id=item.AddressID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AddressID })
        </td>
    </tr>
}

</table>
</div>