@model IEnumerable<HumerResource.Models.Agents>

@{
    ViewBag.Title = "Agent";
}
<style type="text/css">
    table {
        
        margin-left:auto;
        margin-right:auto;
    }
    th {
      background-color:darkblue;
      color:Window;  
    }
    td {
      background-color:lightcyan;
      
    }
    
    .Title_Div {
        text-align:center;
         font-size:64PX;
         width:inherit;
         font-family:Arial;
         color:Window;
         background-color:lightblue;
    }
</style>
<div class="Title_Div">Agent List</div>
<div style="text-align:center;">
<h1>
    @Html.ActionLink("Agent List", "Index","Home") | @Html.ActionLink("Address List", "Index","Address")
</h1>
    

<p>
    @Html.ActionLink("New Agent", "Create")   |    
</p>
    
<table class="TableList">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item }) |
            @Html.ActionLink("Details", "Details", new { id=item.AgentsID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AgentsID })
        </td>
    </tr>
}

</table>
        
</div>